{
  "name": "Zenhub Colouring",
  "version": "0.1",
  "description": "Chrome plugin for colouring issues to enhance it to be used as a digital kanban.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["applyColours.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.ibm.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/funnel_colours16.png",
    "32": "images/funnel_colours32.png",
    "48": "images/funnel_colours48.png",
    "128": "images/funnel_colours128.png"
  },
  "manifest_version": 2
}
